<%- include("./include/header") %>
    <!--Main content-->
    <div class="site-body">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb bg-transparent mb-0">
                <li class="breadcrumb-item"><a href="/<%=dashboard%>"><i class="fas fa-home"></i> Trang chủ</a></li>
                <li class="breadcrumb-item"><a href="/<%=dashboard%>/sitefeature">Tính năng</a></li>
                <li class="breadcrumb-item active" aria-current="page">Danh sách</li>
            </ol>
        </nav>
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card mb-3">
                        <div class="card-body">
                            <div class="datatable-search-header">
                                <select id="slBulk">
                                    <option value="">Bulk actions</option>
                                    <option value="delete">Xóa</option>
                                </select>                                
                                <button id="btnBulk" type="button" class="btn btn-primary">Ok</button>
                                <div class="datatable-filter-holder">
                                    <input class="item-filter" type="text" placeholder="Tìm kiếm....">
                                    <select class="item-filter">
                                        <option value="">Tất cả</option>
                                    <%
                                        sitefeatures.forEach(sf => {
                                    %>
                                            <option value="<%=sf.id%>"><%=sf.name%></option>
                                    <%
                                        })
                                    %>
                                    </select>
                                    <button id="btnDTFileter" type="button" class="btn btn-primary">Tìm</button>
                                </div>
                                <button class="btn btn-sm btn-outline-primary btn-load-modal-add">Thêm mới</button>
                            </div>                           
                            <table id="datatable-sside" class="table table-bordered datatable-style" data-type="sitefeature">
                                <thead>
                                    <tr>
                                        <th><input type="checkbox" name="select_all" value="1" id="datatable-select-all"></th>
                                        <th>Icon</th>
                                        <th>Tên</th>
                                        <th>Tên Hiển thị</th>
                                        <th>Diễn giải</th>
                                        <th>Đường dẫn</th>
                                        <th>Cha</th>
                                        <th class="text-center">None Link</th>
                                        <th style="max-width: 120px" class="text-right"><i class="fas fa-clock" title="Ngày cập nhật gần nhất"></i></th>
                                    </tr>
                                </thead>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>    
    <!-- Model -->
    <div class="modal fade" id="frmModal" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title"><span id="frmTitleAction">Sửa</span> Tính năng</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
                </div>
                <div class="modal-body">
                    <div class="error-modal-edit"></div>
                    <form action="/<%=dashboard%>/sitefeature/edit" method="POST">
                        <div class="form-group">
                            <label for="name" class="col-form-label">Tên</label>
                            <input class="form-control" type="hidden" name="id" id="id">
                            <input class="form-control" type="text" name="name" id="name" placeholder="Tên">
                        </div>
                        <div class="form-group">
                            <label for="title" class="col-form-label">Tên hiển thị</label>
                            <input class="form-control" type="text" name="title" id="title" placeholder="Tên hiển thị">
                        </div>                        
                        <div class="form-group">
                            <label for="url" class="col-form-label">Đường dẫn</label>
                            <input class="form-control" type="text" name="url" id="url" placeholder="Đường dẫn">
                        </div>
                        <div class="form-group">
                            <label for="icon" class="col-form-label">Icon (Fontawesome)</label>
                            <input class="form-control" type="text" name="icon" id="icon" placeholder='<i class="fas fa-caret-right"></i>'>
                        </div>
                        <div class="form-group">
                            <label for="parentid" class="col-form-label">Cha</label>
                            <select name="parentid" id="parentid" class="form-control">
                                <option value="">Trống</option>
                            <%
                                sitefeatures.forEach(sf => {
                            %>
                                    <option value="<%=sf.id%>"><%=sf.name%></option>
                            <%
                                })
                            %>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="description" class="col-form-label">Diễn giải</label>
                            <input class="form-control" type="text" name="description" id="description" placeholder="Diễn giải">
                        </div>
                        <div class="form-group">
                            <div class="checkbox">
                                <input class="form-check-input" type="checkbox" name="nolink" id="nolink">
                                <label class="form-check-label" for="nolink">None Link</label>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="numsort" class="col-form-label">Vị trí</label>
                            <input class="form-control" type="number" name="numsort" id="numsort" placeholder="Vị trí">
                        </div>
                        <div class="text-right mt-3">
                            <button type="submit" class="btn btn-primary">Lưu</button>
                            <button type="button" class="btn btn-danger" data-dismiss="modal">Hủy bỏ</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <script src="/<%=dashboard%>/assets/datatables/datatable.sitefeature.js" charset="utf-8"></script>
    <script src="/<%=dashboard%>/assets/datatables/datatable.all.js" charset="utf-8"></script>
    <%- include("./include/footer") %>