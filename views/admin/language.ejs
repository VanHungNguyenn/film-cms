<%- include("./include/header") %>
    <!--Main content-->
    <div class="site-body">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb bg-transparent mb-0">
                <li class="breadcrumb-item"><a href="/<%=dashboard%>"><i class="fas fa-home"></i> Trang chủ</a></li>
                <li class="breadcrumb-item"><a href="/<%=dashboard%>/language">Ngôn ngữ</a></li>
                <li class="breadcrumb-item active" aria-current="page">Danh sách</li>
            </ol>
        </nav>
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card mb-3">
                        <div class="card-body">
                            <div class="datatable-search-header">
                                <select id="slBulk">
                                    <option value="">Bulk actions</option>
                                    <option value="delete">Xóa</option>
                                </select>
                                <button id="btnBulk" type="button" class="btn btn-primary">Ok</button>
                                <div class="datatable-filter-holder">
                                    <input class="item-filter" type="text" placeholder="Tìm kiếm...">                                    
                                    <select class="item-filter">
                                        <option value="%">Trạng thái</option>
                                        <option value="on">Hoạt động</option>
                                        <option value="off">Dừng</option>
                                    </select>
                                    <button id="btnDTFileter" type="button" class="btn btn-primary">Tìm</button>
                                </div>
                                <button class="btn btn-sm btn-outline-primary btn-load-modal-add">Thêm mới</button>
                            </div>                           
                            <table id="datatable-sside" class="table table-bordered datatable-style" data-type="language">
                                <thead>
                                    <tr>
                                        <th><input type="checkbox" name="select_all" value="1" id="datatable-select-all"></th>
                                        <th>Icon</th>
                                        <th>Tên</th>
                                        <th>Mã</th>
                                        <th>Mã SEO</th>
                                        <th>Vùng</th>
                                        <th class="text-center"><i class="fas fa-power-off"></i></th>
                                    </tr>
                                </thead>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>    
    <!-- Model -->
    <div class="modal fade" id="frmModal" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title"><span id="frmTitleAction">Sửa</span> Ngôn ngữ</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
                </div>
                <div class="modal-body">
                    <div class="error-modal-edit"></div>
                    <form action="/<%=dashboard%>/language/edit" method="POST">
                        <div class="form-group">
                            <label for="id" class="col-form-label">Mã</label>
                            <input class="form-control" type="text" name="id" id="id" placeholder="vn">
                        </div>
                        <div class="form-group">
                            <label for="codelang" class="col-form-label">Mã SEO</label>
                            <input class="form-control" type="text" name="codelang" id="codelang" placeholder="en-US">
                        </div>
                        <div class="form-group">
                            <label for="name" class="col-form-label">Tên</label>
                            <input class="form-control" type="text" name="name" id="name" placeholder="Tên">
                        </div>
                        <div class="form-group">
                            <label for="area" class="col-form-label">Vùng</label>
                            <input class="form-control" type="text" name="area" id="area" placeholder="US">
                        </div>
                        <div class="form-group">
                            <div class="checkbox">
                                <input class="form-check-input" type="checkbox" name="isblock" id="isblock">
                                <label class="form-check-label" for="isblock">Không hiển thị ngôn ngữ này</label>
                            </div>
                        </div>
                        <div class="text-right mt-3">
                            <button type="submit" class="btn btn-primary">Lưu</button>
                            <button type="button" class="btn btn-danger" data-dismiss="modal">Hủy bỏ</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <script src="/<%=dashboard%>/assets/datatables/datatable.language.js" charset="utf-8"></script>
    <script src="/<%=dashboard%>/assets/datatables/datatable.all.js" charset="utf-8"></script>
    <%- include("./include/footer") %>