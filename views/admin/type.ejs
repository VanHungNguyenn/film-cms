<%- include("./include/header") %>
    <!--Main content-->
    <div class="site-body">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb bg-transparent mb-0">
                <li class="breadcrumb-item"><a href="/<%=dashboard%>"><i class="fas fa-home"></i> Trang chủ</a></li>
                <li class="breadcrumb-item"><a href="/<%=dashboard%>/type">Kiểu</a></li>
                <li class="breadcrumb-item active" aria-current="page">Danh sách kiểu</li>
            </ol>
        </nav>
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card mb-3">
                        <div class="card-body">
                            <div class="datatable-search-header">
                                <select id="slBulk">
                                    <option value="">Bulk actions</option>
                                    <option value="delete">Xóa</option>
                                </select>
                                <button id="btnBulk" type="button" class="btn btn-primary">Ok</button>
                                <div class="datatable-filter-holder">
                                    <input class="item-filter" type="text" placeholder="Tìm kiếm...">
                                    <select class="item-filter">
                                        <option value="%">Loại kiểu</option>
                                        <option value="category">Danh mục</option>
                                        <option value="post">Bài viết</option>
                                    </select>
                                    <button type="button" id="btnDTFileter" class="btn btn-primary">Tìm</button>
                                </div>
                                <a href="/<%=dashboard%>/type/add" class="btn btn-outline-primary">Thêm mới</a>
                            </div>
                            <div class="table-responsive">
                                <table id="datatable-sside" class="table table-bordered datatable-style" data-type="type">
                                    <thead>
                                        <tr>
                                            <th><input type="checkbox" name="select_all" value="1" id="datatable-select-all"></th>
                                            <th>Tên</th>
                                            <th>Diễn giải</th>
                                            <th>Gốc</th>
                                            <th>Đuôi</th>
                                            <th>Loại kiểu</th>
                                            <th>Loại danh mục</th>
                                            <th class="text-center"><i class="fas fa-search" title="Danh mục có tìm kiếm"></i></th>
                                            <th class="text-center"><i class="fas fa-boxes" title="Google Index"></i></th>
                                            <th class="text-center"><i class="fas fa-sitemap" title="Có sitemap"></i></th>
                                            <th class="text-center"><i class="fas fa-power-off" title="Hoạt động"></i></th>
                                        </tr>
                                    </thead>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="/<%=dashboard%>/assets/datatables/datatable.type.js" charset="utf-8"></script>
    <script src="/<%=dashboard%>/assets/datatables/datatable.all.js" charset="utf-8"></script>
    <%- include("./include/footer") %>